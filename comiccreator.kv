<ComicCreator@Screen>:
    name: 'comicscreen'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        ToolBox:
            id: _tool_box
            drawing_space: _drawing_space
            comic_creator: root
            size_hint: None, None
            width: 100
    
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        RelativeLayout:
            id: _rl
            size_hint: None, None
            width: root.width - _tool_box.width
            height: root.height - root.height - _general_options.height - _status_bar.height
            DrawingSpace:
                id: _drawing_space
                status_bar: _status_bar
                general_options: _general_options
                too_box: _tool_box
                size_hint: None, None
                size: self.parent.size
                pos: self.parent.pos
                canvas:
                    Color:
                        rgba: [1, 1, 1, 1]
                    Line:
                        rectangle: (self.pos[0], self.pos[1], self.width, self.height)
                        width: 1
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'
            GeneralOptions:
                id: _general_options
                drawing_space: _drawing_space
                comic_creator: root
                size_hint: 1, None
                height: 48
            StatusBar:
                id: _status_bar
                size_hint: 1, None
                height: 24